{
  "name": "tonweb-mnemonic",
  "version": "0.0.2",
  "description": "Mnemonic code for generating deterministic keys for TON (Telegram Open Network)",
  "main": "dist/node",
  "browser": "dist/web",
  "scripts": {
    "build": "rm -rf ./dist && run-p build:web build:node",
    "build:ci": "NODE_ENV=production npm run build",
    "build:node": "webpack --env target=node",
    "build:web": "webpack --env target=web",
    "prepublishOnly": "npm run build:ci",
    "test:manual": "browser-sync start --server --index ./test/index.html --files ./dist"
  },
  "keywords": [
    "BIP39",
    "Blockchain",
    "Mnemonic",
    "TON",
    "Telegram Open Network"
  ],
  "contributors": [
    {
      "name": "rulon",
      "url": "https://github.com/rulon"
    },
    {
      "name": "tolyayanot",
      "url": "https://github.com/tolya-yanot"
    },
    {
      "name": "Slava Fomin II",
      "email": "slava@fomin.io",
      "url": "https://github.com/slavafomin"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/toncenter/tonweb-mnemonic/issues"
  },
  "homepage": "https://github.com/toncenter/tonweb-mnemonic#readme",
  "engines": {
    "node": ">=15"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "npm-run-all": "^4.1.5",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
